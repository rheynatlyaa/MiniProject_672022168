<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvWelcomeMhs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome Mahasiswa"
            android:textSize="18sp"
            android:textColor="#003399"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnRegUlang"
            android:text="Registrasi Ulang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#003399"
            android:textColor="#ffffff"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnDaftarMatkul"
            android:text="Daftar Mata Kuliah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#003399"
            android:textColor="#ffffff"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnAbsensi"
            android:text="Absensi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#003399"
            android:textColor="#ffffff"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnLihatNilai"
            android:text="Lihat Nilai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#003399"
            android:textColor="#ffffff"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvOutputMhs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:paddingTop="16dp"
            android:text="Output akan muncul di sini." />
    </LinearLayout>
</ScrollView>
